<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Register</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous" />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script
            src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
        <style>
            form {
                width: 50%;
            }
        </style>
    </head>
    <body>
        <div class="form-signin container my-5 text-center">
            <form class="mx-auto">
                <h1 class="h3 mb-3 fw-normal">Register</h1>
                <div class="form-floating">
                    <input
                        type="text"
                        class="form-control"
                        id="username"
                        placeholder="Username"
                        pattern="[A-Za-z\s]+"
                        title="Only alphabet characters and spaces are allowed"
                        required />
                    <label for="username">Username</label>
                </div>
                <div class="form-floating">
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        placeholder="abc@xyz.hyu"
                        pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-]+)(\.[a-zA-Z]{2,5}){1,2}$"
                        title="Example: abc@xyz.hyu"
                        required />
                    <label for="email">Email</label>
                </div>
                <div class="form-floating">
                    <input
                        type="tel"
                        class="form-control"
                        id="phone"
                        placeholder="1234567890"
                        pattern="[0-9]{10}"
                        title="Format: Numbers only (10 digits)"
                        required />
                    <label for="phone">Phone</label>
                </div>
                <div class="form-floating">
                    <input
                        type="text"
                        class="form-control"
                        id="address"
                        placeholder="123 Main St, City"
                        pattern="[A-Za-z0-9\s, -]+"
                        title="Only letters, numbers, spaces, commas, and hyphens are allowed"
                        required />
                    <label for="address">Address</label>
                </div>
                <div class="form-floating">
                    <input
                        type="password"
                        class="form-control"
                        id="password"
                        placeholder="Password"
                        required />
                    <label for="password">Password</label>
                </div>
                <div class="mt-3">
                    <span>Already registered?
                        <a href="/login">Login here!</a></span>
                </div>
                <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">
                    Register
                </button>
            </form>
        </div>
    </body>
    <script>
        $(document).ready(() => {
            $("form").submit(async (e) => {
                e.preventDefault();

                const formData = {
                    username: $("#username").val(),
                    email: $("#email").val(),
                    phone: $("#phone").val(),
                    address: $("#address").val(),
                    password: $("#password").val(),
                };

                try {
                    const response = await fetch("/api/auth/signup", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(formData),
                    });

                    if (response.ok) {
                        alert(await response.text());
                        window.location.href = "/login";
                    } else {
                        const errorMessage = await response.text();
                        alert(errorMessage);
                    }
                } catch (error) {
                    console.error("Error:", error);
                }
            });
        });
    </script>
</html>
