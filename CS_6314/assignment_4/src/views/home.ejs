<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Home</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous" />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script
            src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
        <style>
            .container {
                max-width: 50%;
            }
        </style>
    </head>
    <body>
        <div class="form-signin container my-5 text-center">
            <h1 class="h3 mb-3 fw-normal">Home</h1>
            <div class="mb-3">
                <strong>Username: </strong><%= user.username %>
            </div>
            <div class="mb-3"><strong>Email: </strong><%= user.email %></div>
            <div class="mb-3"><strong>Phone: </strong><%= user.phone %></div>
            <div class="mb-3">
                <strong>Address: </strong><%= user.address %>
            </div>
            <div>
                <button class="btn btn-danger">Logout</button>
            </div>
        </div>
    </body>
    <script>
        async function logout() {
            try {
                const response = await fetch("/logout", { method: "POST" });
                if (response.ok) {
                    window.location.href = response.url;
                }
            } catch (error) {
                console.error("Error:", error);
            }
        }

        $(document).ready(() => {
            // Make post request to logout route using fetch
            $(".btn-danger").click(async (e) => {
                e.preventDefault();
                await logout();
            });

            // Auto-logout after 10 seconds of inactivity
            let timeout;
            const idleTime = 10000;
            timeout = setTimeout(async () => {
                await logout();
            }, idleTime);
            $(document).on("mousemove keypress", () => {
                clearTimeout(timeout);
                timeout = setTimeout(async () => {
                    await logout();
                }, idleTime);
            });
        });
    </script>
</html>
