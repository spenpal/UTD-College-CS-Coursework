<!DOCTYPE html>
<html>
    <head>
        <title>Arcade Games</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous">
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
        <style>
            #main {
                background-color: lightgray;
            }

            a, a:hover, a:focus, a:active {
                text-decoration: none;
                font-weight: bold;
            }

            h1 {
                font-size: 3em;
                text-transform: uppercase;
                font-family: "Roboto", sans-serif;
                font-weight: 900;
            }

            h2 {
                font-size: 2em;
                text-transform: uppercase;
                font-family: "Roboto", sans-serif;
                font-weight: 600;
            }

            #message {
                font-size: 1.5em;
                font-family: "Roboto", sans-serif;
                font-weight: 300;
            }

            .vr {
                border-left: 5px solid black;
                height: 100%;
            }
        </style>
    </head>
    <body>
        <div id="main" class="container-fluid p-4">
            <a href="/">Home</a>
            <h1 class="my-3">Arcade</h1>
            <div id="message">Show game details.</div>
        </div>
        <div class="container-fluid p-4">
            <div class="row">
                <div class="col-1"></div>
                <!-- Left half for the image -->
                <div class="col-5 text-center">
                    <img src="/<%= game.image.path %>"
                        alt="<%= game.image.description %>"
                        class="img-fluid"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        data-bs-title="<%= game.image.description %>">
                </div>
                <div class="col-1 text-center">
                    <!-- Vertical divider -->
                    <div class="vr"></div>
                </div>
                <!-- Right half for game details -->
                <div class="col-4">
                    <h2 class="text-center"><%= game.name %></h2>
                    <div class="row">
                        <form>
                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea id="description" class="form-control"
                                    rows="3" readonly><%=
                                    game.description %></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="type" class="form-label">Type</label>
                                <input id="type" type="text"
                                    value="<%= game.type %>"
                                    class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="age" class="form-label">Minimum Age</label>
                                <input id="age" type="text"
                                    value="<%= game.minimumAge %>"
                                    class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="price-hourly" class="form-label">Pricing
                                    (Hourly)</label>
                                <input id="price-hourly" type="text"
                                    value="<%= game.pricing.hourly %>"
                                    class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="price-per-game" class="form-label">Pricing
                                    (Per Game)</label>
                                <input id="price-per-game" type="text"
                                    value="<%= game.pricing.perGame %>"
                                    class="form-control" readonly>
                            </div>
                        </form>
                    </div>
                    <div class="mt-3">
                        <button id="editGame" type="button"
                            class="btn btn-warning">Edit Game</button>
                        <button id="deleteGame" type="button"
                            class="btn btn-danger">Delete Game</button>
                    </div>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
    </body>
    <script>
        $(document).ready(() => {
            const tooltipTriggerList = $('[data-bs-toggle="tooltip"]');
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => 
                new bootstrap.Tooltip(tooltipTriggerEl));

            // set event listeners for edit and delete buttons
            $('#editGame').click(() => {
                window.location.href = '/games/<%= game._id %>/edit';
            });
            $('#deleteGame').click(() => {
                // make a delete request to the server using fetch
                fetch('/games/<%= game._id %>', {
                    method: 'DELETE',
                }).then((response) => {
                    // redirect to the home page
                    window.location.href = '/';
                }).catch(error => {
                    console.error('Error:', error);
                });;
            });
        });
    </script>
</html>
